{
  "name": "vibe-speaker",
  "private": true,
  "version": "0.0.4",
  "main": "dist-electron/main/index.js",
  "author": {
    "name": "Josh",
    "email": "josh@example.com"
  },
  "homepage": "https://github.com/josh/vibe-speaker",
  "description": "Vibe Speaker Application",
  "build": {
    "appId": "com.josh.vibespeaker",
    "productName": "Vibe Speaker",
    "forceCodeSigning": false,
    "directories": {
      "output": "releases/${version}/${os}"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "!**/*.ts"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "extraFiles": [
      "RELEASE_README.md"
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.png",
      "identity": null
    }
  },
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
    "build": "tsc -b && vite build && tsc -p electron/tsconfig.json && electron-builder",
    "build:all": "tsc -b && vite build && tsc -p electron/tsconfig.json && electron-builder -mwl",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "framer-motion": "^12.23.26",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "lucide-react": "^0.561.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.3"
  }
}
